name: Build and scan Docker Image
on: [push, pull_request]
jobs:
  build:
    runs-on: ubuntu-latest																// GitHub Actions은 Ubuntu:latest 컨테이너를 이용
    steps:
    - uses: actions/checkout@v1															// GitHub Actions Checkout v1을 호출
    - name: Build the Docker image
      run: docker build . --file Dockerfile --tag sysdiglabs/dummy-vuln-app:latest    	// Github의 Dockerfile을 이용해 docker를 빌드 빌드된 이미지 이름은 sysdiglabs/dummy-vuln-app:latest 로 지정
    - name: Scan image
      id: scan
      uses: sysdiglabs/scan-action@v3													// Sysdig의 Scan-action v3을 호출
      with:
        image-tag: "sysdiglabs/dummy-vuln-app:latest"									// 대상은 앞서 생성한 이미지인 sysdiglabs/dummy-vuln-app:latest 대상으로 분석
        sysdig-secure-token: 6b976743-50c1-4d51-91cb-f141ed15d7fa						// API 토큰 지정
        dockerfile-path: ./Dockerfile
        input-type: docker-daemon
        run-as-user: root
        ignore-failed-scan: true
